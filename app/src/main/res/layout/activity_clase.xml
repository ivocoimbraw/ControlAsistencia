<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Clases"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/txtFechaClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (YYYY-MM-DD)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/txtHoraInicioClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora inicio (HH:MM)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/txtHoraFinClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora fin (HH:MM)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/txtEstadoClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/txtIdGrupoClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del grupo"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnGuardarClase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnAgregarClase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEliminarClase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:enabled="false" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Clases"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/lvClases"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>